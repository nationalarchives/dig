{% extends "layout.html.twig" %}

{% block title %} app_name {% endblock %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="row">
            {% include 'status-bar.html.twig' %}
            <h1>Review uploaded metadata</h1>
            <p>This page provides an opportunity to:</p>
            <ul>
                <li>view the uploaded metadata</li>
                <li>compare the uploaded metadata to that provided in the DROID report</li>
                <li>re-upload the metadata if necessary</li>
            </ul>
            <table class="table table-condensed" id="comparison-table">
                <tr>
                    <th>&nbsp;</th>
                    <th>Difference between DROID report and uploaded CSV
                        <button class="btn btn-default pull-right" id="show-ok">Hide matches</button>
                    </th>
                </tr>
                <tr class="success">
                    <th>Resource identifiers</th>
                    <td><span class="glyphicon glyphicon-ok"></span> All 1,234 identifiers match</td>
                </tr>
                <tr class="success">
                    <th>Number of files and folders</th>
                    <td><span class="glyphicon glyphicon-ok"></span> Files described in uploaded metadata match those in
                        Droid report
                    </td>
                </tr>
                <tr class="danger">
                    <th>File names and checksums</th>
                    <td><span class="glyphicon glyphicon-remove"></span> <a href="/diff">8 file names</a> differ between
                        the DROID report
                        and metadata CSV
                    </td>
                </tr>
                <tr class="success">
                    <th>File sizes</th>
                    <td><span class="glyphicon glyphicon-ok"></span> All file sizes match</td>
                </tr>
                <tr class="danger">
                    <th>Closure status</th>
                    <td><span class="glyphicon glyphicon-remove"></span> <a href="/diff">14 closure statuses</a> differ
                        between the DROID
                        report and metadata CSV
                    </td>
                </tr>
                <tr class="success">
                    <th>File types</th>
                    <td><span class="glyphicon glyphicon-remove"></span> All file types match</td>
                </tr>
                <tr class="success">
                    <th>Last modified date</th>
                    <td><span class="glyphicon glyphicon-remove"></span> All modification dates match</td>
                </tr>
            </table>
            {% include 'transfer-summary.html.twig' %}

            <div>
                <a href="/" class="btn btn-default">Delete and resubmit metadata</a>
                <a href="/metadata-submitted-ok" class="btn btn-default">Save and proceed</a>
            </div>
        </div>
    </div>
{% endblock %}