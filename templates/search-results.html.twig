{% extends "layout.html.twig" %}

{% block title %} app_name {% endblock %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">{{ department_name }} Records</h1>
        <h2>Search results</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Filter by:
                    </div>
                    <div class="panel-body">
                        <h3>Collection</h3>
                        <div class="checkbox">
                            <label><input type="checkbox" value="" checked="true"> COMPH</label>
                        </div>
                        <h3>Document type</h3>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">All</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="" checked="true">Open records</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Closed records</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Closed records with open description</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="list-group search-results">
                    {% for i in 1..5 %}
                        <a href="/record-preview" class="list-group-item">
                            <h3>BT 95/1</h3>
                            <p>Index (classi sheets) to dissolved companies, for companies numbered between 25885 and 80713 (and incorporated between 1888 and 1904)</p>
                        </a>
                    {% endfor %}
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}